@using ADCOnline.Simple.Base
@model Website.Areas.Admin.ViewModels.MemberViewModel
@if (Model.SystemActionAdmin.Edit || Model.SystemActionAdmin.Add)
{
    <script type="text/javascript">
        $(function() {
            $("#AddEditForm").validate({
                rules: {
                    Name: { required: true, maxlength: 255 }
                },
                messages: {
                    Name: "Họ tên bắt buộc nhập"
                },
                submitHandler: function() { //onSubmit
                    var tab = $('#Show-Destination ul li.active a').attr('href');
                    tab = tab.substring(1, tab.length);
                    var newurlForm = '@Url.Action("AjaxForm")' + "?tab=" + tab;
                    PostWithAlert(urlPostAction, newurlForm, "#AddEditForm");
                    return false;
                }
            });

        });
    </script>

    <form id="AddEditForm" class="form-horizontal">
        <div class="box-footer">
            <div class="btncss">
                <button id="submit" type="submit" class="primaryAction btn btn-success">@ViewBag.ActionText</button>
                <button id="reset" type="reset" class="primaryAction btn btn-warning ">Nhập lại</button>
            </div>

        </div>
        <div class="box-body">
            <input type="hidden" name="Do" id="Do" value="@ViewBag.Action" />
            <input type="hidden" name="ItemId" id="ItemId" value="@Model.Member.ID" />
            <div class="form-group">
                <label class="col-sm-2">ID</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="ID" id="ID" value="@Model.Member.ID">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">UserName</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="UserName" id="UserName" value="@Model.Member.UserName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Password</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Password" id="Password" value="@Model.Member.Password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">PasswordSalt</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="PasswordSalt" id="PasswordSalt" value="@Model.Member.PasswordSalt">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">FullName</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="FullName" id="FullName" value="@Model.Member.FullName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Email</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Email" id="Email" value="@Model.Member.Email">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">UrlPicture</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="UrlPicture" id="UrlPicture" value="@Model.Member.UrlPicture">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Gender</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Gender" id="Gender" value="@Model.Member.Gender">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">IsEmployer</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="IsEmployer" id="IsEmployer" value="@Model.Member.IsEmployer">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">IsActiveByEmail</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="IsActiveByEmail" id="IsActiveByEmail" value="@Model.Member.IsActiveByEmail">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">FaceBookId</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="FaceBookId" id="FaceBookId" value="@Model.Member.FaceBookId">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">GoogleId</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="GoogleId" id="GoogleId" value="@Model.Member.GoogleId">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">IsDeleted</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="IsDeleted" id="IsDeleted" value="@Model.Member.IsDeleted">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Mobile</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Mobile" id="Mobile" value="@Model.Member.Mobile">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Address</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Address" id="Address" value="@Model.Member.Address">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Content</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="Content" id="Content" value="@Model.Member.Content">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">PassReal</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="PassReal" id="PassReal" value="@Model.Member.PassReal">
                </div>
            </div>
        </div>
    </form>
}