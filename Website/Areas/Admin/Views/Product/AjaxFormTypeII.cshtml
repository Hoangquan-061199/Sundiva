            var amount = 0;
            switch (method) {
                case "1":
                    if (percent != "") {
                        amount = price * (parseFloat(percent) / 100);
                    }
                    if ($("#DiscountAmount").length > 0) {
                        $("#DiscountAmount").val(addCommas(Math.round(amount)));
                    }
                    $("#PriceView").val(addCommas(price - amount));
