<div id="myModal" class="modalView">
    <div class="w_modala">
        <!-- Modal content -->
        <div class="modalView-contentView">
            <span class="closeView">&times;</span>
            <div id="ViewContent"></div>
        </div>
    </div>


</div>
<script>
    $(function () {
        $(".viewImg")
            .click(function () {
                var content = $(this).attr("src");
                $('#ViewContent').html('<img src="' + content + '">');
                $('#myModal').fadeIn();

            });
        $(".viewTitle")
            .click(function () {
                var content = $(this).attr("title");
                $('#ViewContent').html(content);
                $('#myModal').fadeIn();

            });
        $(".closeView")
            .click(function () {
                $('#myModal').fadeOut();
            });
    })
</script>
<style>
    .modalView { display: none; position: fixed; z-index: 1; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgb(0,0,0); background-color: rgba(0,0,0,0.4); }
    .w_modala { display: flex; -moz-display: flex; -webkit-display: flex; align-items: center; -moz-align-items: center; -webkit-align-items: center; justify-content: center; -moz-justify-content: center; -webkit-justify-content: center; height: 100%; width: 100%; }
    .modalView-contentView { background-color: #fefefe; margin: 0 auto; padding: 20px; border: 1px solid #888; width: 100%; max-width: 600px; max-height: 600px; position: relative; }
    .closeView { color: #aaa; float: right; font-size: 28px; font-weight: bold; }
    .closeView:hover,
    .closeView:focus { color: black; text-decoration: none; cursor: pointer; }
    span.closeView { position: absolute; top: -15px; width: 30px; height: 30px; border-radius: 50%; background: #333; text-align: center; line-height: 30px; color: #fff; right: -15px; }
</style>
