</header>
<script>
    $('.notification').on('scroll', function () {
        if ($(this).scrollTop() + $(this).innerHeight() >= $(this)[0].scrollHeight) {
            var p = $('#Page').val();
            if (p > 0) {
                $('.notification').append("<span class=\"loading\">Đang tải</span>");
                $('#Page').remove();
                var url = "/Adminadc/Comment/MoreNotification?page=" + p;
                $.ajax({
                    url: encodeURI(url),
                    cache: false,
                    type: "POST",
                    success: function (data) {
                        $('.loading').remove();
                        $('.notification').append(data);
                        $('.notification').find('.hidden').removeClass('hidden').fadeIn();
                    }
                });
            }
        }
    });
    //$(function () {
    //    $('.sidebar-toggle').click();
    //});
</script>
<style>
    .notification a:nth-of-type(2n+1) {
        background: #f2f2f2;
    }

    .lang {
        width: 30px;
        display: block;
        height: 51px;
        line-height: 51px;
        text-align: center;
        font-weight: 600;
    }

        .lang img {
            width: 100%;
        }

    .drop-lang {
        right: 0 !important;
    }

        .drop-lang a {
            display: block;
            padding: 0 10px;
        }

            .drop-lang a img {
                margin-right: 10px;
            }
</style>
<script>
    $('.drop-lang a').click(function (e) {
        e.preventDefault();
        var lang = $(this).data('lang');
        var lan = Cookies.get('lanad');
        if (lan == lang) return;
        else {
            Cookies.set('lanad', lang, { expires: 1 });
            window.location.reload();
        }
    });
</script>