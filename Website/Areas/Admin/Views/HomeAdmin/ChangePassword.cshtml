@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/js/jquery.form.min.js"></script>
<section class="content">
    <div class="box-about-home">
        <div class="col-sm-4 col-xs-12">
            <div class="detail-about-home">
                <h2 class="title-abous">Đổi mật khẩu</h2>
                <environment include="Development">
                    <script src="~/Admin/js/loginAdmin.js"></script>
                </environment>
                <form id="ChangePassFrm" action="@Url.Action("ChangePasswordAction","HomeAdmin")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="body">   
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                                <input class="form-control" id="NewPassword" name="NewPassword" placeholder="Mật khẩu mới" type="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                                <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Xác nhận mật khẩu mới" type="password">
                            </div>
                        </div>
                    </div>
                    <div class="footer text-center">
                        <input type="submit" id="btnChangePassFrm" class="btn btn-primary" value="Đổi mật khẩu" title="Đổi mật khẩu">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<style>
    label.error { position: absolute; top: 0; left: 100%; width: auto; background: #d60202; color: #ffffff; display: inherit; margin-left: 10px; border-radius: 4px; padding: 0 10px; }
        label.error:before { content: ''; border: 5px solid transparent; border-right: 5px solid #d60202; position: absolute; left: -10px; top: 9px; }
</style>