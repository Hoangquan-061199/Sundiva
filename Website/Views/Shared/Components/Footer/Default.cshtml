                        <a href="@Model.SystemConfig.Instagram" rel="nofollow" target="_blank" title="Instagram" class="item instagram">
                            <svg xmlns="http://www.w3.org/2000/svg" height="18"
                                 viewBox="0 0 448 512">
                                <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z" />
                            </svg>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model.SystemConfig.Tiktok))
                    {
                        <a href="@Model.SystemConfig.Tiktok" rel="nofollow" target="_blank" title="Tiktok" class="item tiktok">
                            <svg xmlns="http://www.w3.org/2000/svg" height="18"
                                 viewBox="0 0 448 512">
                                <path d="M448,209.91a210.06,210.06,0,0,1-122.77-39.25V349.38A162.55,162.55,0,1,1,185,188.31V278.2a74.62,74.62,0,1,0,52.23,71.18V0l88,0a121.18,121.18,0,0,0,1.86,22.17h0A122.18,122.18,0,0,0,381,102.39a121.43,121.43,0,0,0,67,20.14Z" />
                            </svg>
                        </a>
                    }
                </div>
            </div>
            <div class="right">
                <vc:send-infomation></vc:send-infomation>
            </div>
        </div>
    </div>
    <div class="mid">
        <div class="container">
            <div class="row1">
                <div class="big-title title-item uppercase">
                    <p>@Model.SystemConfig.Name</p>
                </div>
                @if (!string.IsNullOrEmpty(Model.SystemConfig.Address1))
                {
                    <div class="item">
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" height="13px" viewBox="0 0 576 512">
                                <path d="M543.8 287.6c17 0 32-14 32-32.1c1-9-3-17-11-24L512 185V64c0-17.7-14.3-32-32-32H448c-17.7 0-32 14.3-32 32v36.7L309.5 7c-6-5-14-7-21-7s-15 1-22 8L10 231.5c-7 7-10 15-10 24c0 18 14 32.1 32 32.1h32v69.7c-.1 .9-.1 1.8-.1 2.8V472c0 22.1 17.9 40 40 40h16c1.2 0 2.4-.1 3.6-.2c1.5 .1 3 .2 4.5 .2H160h24c22.1 0 40-17.9 40-40V448 384c0-17.7 14.3-32 32-32h64c17.7 0 32 14.3 32 32v64 24c0 22.1 17.9 40 40 40h24 32.5c1.4 0 2.8 0 4.2-.1c1.1 .1 2.2 .1 3.3 .1h16c22.1 0 40-17.9 40-40V455.8c.3-2.6 .5-5.3 .5-8.1l-.7-160.2h32z" />
                            </svg>
                        </div>
                        <p><strong>@ResourceData.Resource("TruSoChinh", ViewBag.Lang):</strong> @Model.SystemConfig.Address1</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SystemConfig.Address2))
                {
                    <div class="item">
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" height="15px" viewBox="0 0 384 512">
                                <path d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z" />
                            </svg>
                        </div>
                        <p><strong>@ResourceData.Resource("TTGiaoDich", ViewBag.Lang):</strong> @Model.SystemConfig.Address2</p>
                    </div>
                }
                @if (hotline.Any())
                {
                    int i = 1;
                    <div class="item">
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" height="14px" viewBox="0 0 512 512">
                                <path d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z" />
                            </svg>
                        </div>
                        <p>
                            <strong>@ResourceData.Resource("DienThoai", ViewBag.Lang):</strong>
                            @foreach (string item in hotline)
                            {
                                <a href="tel:@Utility.FormatPhone(item)" title="@ResourceData.Resource("DienThoai", ViewBag.Lang)" target="_blank" rel="nofollow">@(i == 1 ? item : " - " + item)</a>
                                i++;
                            }
                            | <strong>@ResourceData.Resource("Fax", ViewBag.Lang):</strong> <a href="tel:@Utility.FormatPhone(Model.SystemConfig.Fax1)" title="@ResourceData.Resource("Fax", ViewBag.Lang)" target="_blank" rel="nofollow">@Model.SystemConfig.Fax1</a>
                        </p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.SystemConfig.Email2))
                {
                    <div class="item">
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor"
                                 class="bi bi-envelope-fill" viewBox="0 0 16 16">
                                <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                            </svg>
                        </div>
                        <p><strong>@ResourceData.Resource("Email", ViewBag.Lang):</strong> <a href="mailto:@Model.SystemConfig.Email2" title="@ResourceData.Resource("Email", ViewBag.Lang)" target="_blank" rel="nofollow">@Model.SystemConfig.Email2</a></p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.SystemConfig.Website))
                {
                    <div class="item">
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                 class="bi bi-globe" viewBox="0 0 16 16">
                                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4a9.267 9.267 0 0 1 .64-1.539 6.7 6.7 0 0 1 .597-.933A7.025 7.025 0 0 0 2.255 4H4.09zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a6.958 6.958 0 0 0-.656 2.5h2.49zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5H4.847zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5H4.51zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5H8.5zM5.145 12c.138.386.295.744.468 1.068.552 1.035 1.218 1.65 1.887 1.855V12H5.145zm.182 2.472a6.696 6.696 0 0 1-.597-.933A9.268 9.268 0 0 1 4.09 12H2.255a7.024 7.024 0 0 0 3.072 2.472zM3.82 11a13.652 13.652 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5H3.82zm6.853 3.472A7.024 7.024 0 0 0 13.745 12H11.91a9.27 9.27 0 0 1-.64 1.539 6.688 6.688 0 0 1-.597.933zM8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855.173-.324.33-.682.468-1.068H8.5zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.65 13.65 0 0 1-.312 2.5zm2.802-3.5a6.959 6.959 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5h2.49zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7.024 7.024 0 0 0-3.072-2.472c.218.284.418.598.597.933zM10.855 4a7.966 7.966 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4h2.355z" />
                            </svg>
                        </div>
                        <p><strong>@ResourceData.Resource("Website", ViewBag.Lang):</strong> <a href="@Model.SystemConfig.Website" title="@ResourceData.Resource("Website", ViewBag.Lang)">@Model.SystemConfig.Website.Replace("http://", "").Replace("https://", "")</a></p>
                    </div>
                }
            </div>
            @if (Menu2.Any())
            {
                <div class="row2">
                    <div class="big-title title-item uppercase">
                        <p>@ResourceData.Resource("DuLich", ViewBag.Lang)</p>
                    </div>
                    @foreach (WebsiteModulesJson item in Menu2)
                    {
                        <div class="item">
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" height="8px" viewBox="0 0 320 512"><path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z" /></svg>
                            </div>
                            <a href="@Utility.Link(item.NameAscii, string.Empty, item.LinkUrl)" title="@item.Name">@item.Name</a>
                        </div>
                    }
                </div>
            }
            @if (Menu.Any())
            {
                <div class="row3">
                    <div class="big-title title-item uppercase">
                        <p>@ResourceData.Resource("ThongTin", ViewBag.Lang)</p>
                    </div>
                    @foreach (WebsiteModulesJson item in Menu)
                    {
                        <div class="item">
                            <div class="icon">
                                <svg xmlns="http://www.w3.org/2000/svg" height="8px" viewBox="0 0 320 512"><path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z" /></svg>
                            </div>
                            <a href="@Utility.Link(item.NameAscii, string.Empty, item.LinkUrl)" title="@item.Name">@item.Name</a>
                        </div>
                    }
                </div>
            }
            <div class="row4">
                <div class="big-title title-item uppercase">
                    <p>@Model.Payment.Name</p>
                </div>
                <div class="list-payment">
                    <vc:other-component code="Payment"></vc:other-component>
                </div>
            </div>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.SystemConfig.Copyright))
    {
        <div class="bot">
            <div class="container">
                <p>
                    @Model.SystemConfig.Copyright
                </p>
            </div>
        </div>
    }
</footer>

<div class="social-fixed">
    @if (hotline.Any())
    {
        <div class="hl-fixed">
            <a href="tel:@hotline.FirstOrDefault()" rel="nofollow" class="phone coccoc-alo-phone coccoc-alo-green coccoc-alo-show" title="Hotline">
                <div class="coccoc-alo-ph-circle"></div>
                <div class="coccoc-alo-ph-circle-fill"></div>
                <div class="coccoc-alo-ph-img-circle"></div>
            </a>
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.SystemConfig.LinkFacebook))
    {
        <a href="@Model.SystemConfig.LinkFacebook" rel="nofollow" target="_blank" class="mess" title="Message">
            <img loading="lazy" src="/html/style/images/ic-mess.webp" width="22" height="22" alt="message">
        </a>
    }
    @if (!string.IsNullOrEmpty(Model.SystemConfig.Zalo))
    {
        <a href="@Model.SystemConfig.Zalo" rel="nofollow" target="_blank" class="zalo" title="Zalo">
            <img loading="lazy" src="/html/style/images/ic-zalo.webp" width="22" height="21" alt="zalo">
        </a>
    }
    <div class="scroll-top">
        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 384 512"><path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z" /></svg>
    </div>
</div>


